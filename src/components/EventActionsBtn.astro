---
import { t } from 'i18next';

const { eventType } = Astro.props;
---

<a
  href="#"
  class="mt-[1.8rem] block w-full rounded-xl py-5 text-center text-sm text-accent-0 shadow-ctaBorder transition-all hover:bg-accent-0 hover:text-dark-0 hover:shadow-none"
  >{
    eventType === 'upcoming'
      ? t('upcomingEvents.action')
      : t('archivedEvents.action')
  }</a
>
