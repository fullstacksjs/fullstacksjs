---
import Button from './Button.astro';
import Hero from './Hero.astro';
import Logo from './Logo.astro';
import Navs from './Navs.astro';
import { t } from 'i18next';
---

<header>
  <div class="logo">
    <Logo />
    <Hero />
    <Button href="https://t.me/fullstacksjs" target="_blank" rel="noopener">
      {t('header.button')}
    </Button>
  </div>
  <hr />
  <Navs />
</header>

<style>
  header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 6rem;
    padding-top: 15rem;
    margin-bottom: 10rem;
  }

  .logo {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 6rem;
  }

  hr {
    border-color: rgb(255 255 255 / 10%);
  }

  @media screen and (min-width: 560px) {
    header {
      padding-top: 10rem;
      gap: 6rem;
    }

    .logo {
      gap: 4rem;
    }
  }

  @media screen and (min-width: 560px) and (max-height: 700px) {
    header {
      padding-top: 6rem;
    }
  }
</style>
